<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/core_ultramarine_50"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_exercise_name"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/utmamerikasans"
        android:maxLines="1"
        android:text="Exercises"
        android:textColor="@color/core_black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <View
        android:id="@+id/blue_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/core_ultramarine_light"
        app:layout_constraintTop_toBottomOf="@+id/tv_exercise_name"
        tools:layout_editor_absoluteX="16dp" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_Exercise_History"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_line"
        tools:ignore="UnknownIdInLayout" />



</androidx.constraintlayout.widget.ConstraintLayout>